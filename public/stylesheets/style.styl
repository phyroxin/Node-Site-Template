/*========================================================
 * Import nib
 *========================================================
 */
@import 'nib'

/*========================================================
 * Grab a custom font from Google
 *========================================================
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*========================================================
 * Nib provides a CSS reset
 *========================================================
 */
global-reset()

/*========================================================
 * Store the main color and
 * background color as variables
 *========================================================
 */
main-color = #fa5b4d
background-color = #faf9f0

html
	overflow-y scroll

body
	font-family 'Georgia'
	background-color background-color
	color #444

header
	width 100%
	font-family 'Quicksand'
	padding 50px 10px
	color #fff
	font-size 25px
	text-align center

	/*========================================================
	 * Note the use of the `main-color`
	 * variable and the `darken` function
	 *========================================================
	 */
	background-color main-color
	border-bottom 1px solid darken(main-color, 30%)
	text-shadow 0px -1px 0px darken(main-color, 30%)

header h1
	font-size 40px

.menu
	display block
	width 500px
	margin 20px auto
	
	@media (min-width: 200px) and (max-width: 439px)
		width 300px

.menu li
	width auto
	padding-left 10px
	padding-right 10px
	float left

.menu li a,
.menu li a:visited
	color white
	text-decoration none
	
	@media (min-width: 200px) and (max-width: 439px)
		font-size 14px

.menu li a:hover
	color #ff0


.container
	width 500px
	margin 50px auto
	overflow hidden

	@media (min-width: 200px) and (max-width: 939px)
		width 100%

.main-content
	float left
	width 300px
	
	@media (min-width: 440px) and (max-width: 939px)
		width 65%
		padding 5px
	
	@media (min-width: 200px) and (max-width: 439px)
		width 100%
		padding 5px
		float left

p
	margin-bottom 20px
	
a
	text-decoration none

#userList li
	display block
	padding 5px
	width 100%
	height 40px

#userList li a
	padding 10px

input,
textarea, 
select,
button
	background #F6F6F6
	color #666
	width 200px
	font-size 13px
	padding 7px 10px
	border 1px solid #B9B9B9
	border-top-color #A4A4A4
	-moz-box-shadow 0 1px 0 #fff, inset 0 1px 1px rgba(0,0,0,.17)
	-ms-box-shadow 0 1px 0 #fff, inset 0 1px 1px rgba(0,0,0,.17)
	-webkit-box-shadow 0 1px 0 #fff, inset 0 1px 1px rgba(0,0,0,.17)
	box-shadow 0 1px 0 #fff, inset 0 1px 1px rgba(0,0,0,.17)
	-moz-border-radius 3px
	-webkit-border-radius 3px
	border-radius 3px
	float left

#editText	
	display none
	width 163px
	float right

.sbtbtn,
.edtbtn,
.delbtn
	width auto
	-moz-box-shadow none
	-ms-box-shadow none
	-webkit-box-shadow none
	box-shadow none
	cursor pointer
	float left

.sbtbtn,
.edtbtn,
.delbtn
	&:hover
		background #fff
		color #cc0000
		-moz-box-shadow		0px 0px 10px #999
		-ms-box-shadow		0px 0px 10px #999
		-webkit-box-shadow	0px 0px 10px #999
		box-shadow			0px 0px 10px #999

.usrText
	display block;
	overflow hidden
	width auto
	float left

.sidebar
	float right
	width 200px

	@media (min-width: 480px) and (max-width: 939px)
		width 30%
	
	@media (min-width: 200px) and (max-width: 479px)
		width 100%
		float left
			
	.widget

		/*
		 * Note the lack of vendor
		 * prefixes here. Nib will
		 * add them for us
		 */
		border-radius 3px
		border 1px solid #ccc
		margin-left 20px
		background-color background-color
		box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)
		
		@media (min-width: 200px) and (max-width: 479px)
			margin 0px
			margin-top 10px
		

	h1
		font-family 'Quicksand'
		margin 13px 10px 4px
		padding-bottom 10px
		border-bottom 1px dotted #ddd
		border-radius 2px 2px 0px 0px
		margin-bottom 10px

	p
		font-size 13px
		padding 0px 10px
		margin-bottom 10px

p
	line-height 1.8

footer
	width 500px
	margin 50px auto
	border-top 1px dotted #ccc
	padding-top 5px
	font-size 13px
	
	@media (min-width: 200px) and (max-width: 939px)
		width 95%
		padding 5%
